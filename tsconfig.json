{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src", // where your TS files live
    "outDir": "./dist", // where compiled JS will go

    /* Environment Settings */
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "types": ["node"],

    /* Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Stricter Typechecking */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "skipLibCheck": true,

    /* Misc */
    "esModuleInterop": true // helps with CommonJS interop
  },
  "include": ["src", "server.ts", "server.ts"]
}
